{
    "name": "my-own-chrome-extension",
    "version": "1.0",
    "manifest_version": 2,
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"]
        }
    ],
    "browser_action": {
        "default_title": "bear"
    },
    "background": {
        "scripts": ["background.js" ]
    },
    "permissions": ["tabs"]
}